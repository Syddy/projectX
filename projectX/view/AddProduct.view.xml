<mvc:View
	controllerName="projectX.view.AddProduct"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:c="sap.ui.core"
	xmlns="sap.m">
	<Page
		title="{projectModel>/reason}">
		<l:Grid
			defaultSpan="L12 M12 S12"
			width="auto">
			<l:content>
				<f:SimpleForm
					id="idAddProductForm"
					minWidth="800"
					maxContainerCols="2"
					editable="true"
					layout="ResponsiveGridLayout"
					labelSpanL="3"
					labelSpanM="3"
					emptySpanL="4"
					emptySpanM="4"
					columnsL="1"
					columnsM="1"
					class="editableForm">
					<f:content>
						<!-- Basic info -->
						<c:Title text="Basic Info" />
						<Label text="Project Name" />
						<Input value="{projectModel>/name}" />
						<Label text="Base URL" />	
						<Input value="{projectModel>/baseUrl}" />
					</f:content>
				</f:SimpleForm>
			</l:content>
		</l:Grid>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Save" 
						type="Emphasized" 
						press="onSave"
						visible="{projectModel>/reasonEdit}"/>
				<Button text="Create" 
						type="Emphasized" 
						press="onCreate" 
						visible="{projectModel>/reasonNew}"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
