<mvc:View
	controllerName="projectX.view.Master.Master"
	displayBlock="true"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page
		id="page"
		enableScrolling="false"
		showHeader="false"
		>
		<content>

			<!-- TABS -->
			<SegmentedButton selectedButton="idButtonRequests"
							select="onSegmentedButtonSelect"
							id="idSegmentedButton"
							width="100%">
				<Button text="Requests {/SelectedProject/mAggregations/requests/length}"
					id="idButtonRequests" />
		        <Button text="Sequences {/SelectedProject/mAggregations/sequences/length}"
					id="idButtonSequences" />
			</SegmentedButton>


			<!-- REQUESTS -->
			<Toolbar visible="{= ${localUIModel>/visibleTab} === 'REQUESTS'}">
				<!-- <Button
					icon="sap-icon://up"
					tooltip="Move request up"
					press="onMoveRequestUp" />
				<Button
					icon="sap-icon://down"
					tooltip="Move request down"
					press="onMoveRequestDown" /> -->
				<ToolbarSpacer/>

				<Button
					text="OData"
					tooltip="Add Request from metadata"
					press="onAddRequestMetadata" />
				<Button
					icon="sap-icon://add"
					tooltip="Add Request"
					press="onAddRequest" />
			</Toolbar>
			<SearchField liveChange="onRequestSearch"
				width="100%"
				visible="{= ${localUIModel>/visibleTab} === 'REQUESTS'}"/>
				<!--TODO fix height of scrollcontainer -->
			<ScrollContainer
				visible="{= ${localUIModel>/visibleTab} === 'REQUESTS'}"
				width="100%"
				horizontal="false"
				vertical="true"
				class="masterScrollContainer">
				<List
					id="idListRequests"
					items="{/SelectedProject/mAggregations/requests}"
					mode="{device>/listMode}"
					select="onRequestsListSelect"
					updateFinished="onListUpdateFinished"
					class="masterList">
					<items>
						<CustomListItem>
							<Toolbar width="100%">
								<Text text="{mProperties/name}"/>
								<ToolbarSpacer/>
								<Button press="onBtnDuplicateRequestPress"
												tooltip="Duplicate"
												icon="sap-icon://duplicate"
												type="Transparent"/>
								<Button press="onBtnDeleteRequestPress"
												tooltip="Delete"
												icon="sap-icon://delete"
												type="Transparent"/>

							</Toolbar>
						</CustomListItem>
					</items>
				</List>
			</ScrollContainer>


			<!-- SEQUENCES -->
			<Toolbar visible="{= ${localUIModel>/visibleTab} === 'SEQUENCES'}">
				<!-- <Button
					icon="sap-icon://up"
					tooltip="Move request up"
					press="onMoveRequestUp" />
				<Button
					icon="sap-icon://down"
					tooltip="Move request down"
					press="onMoveRequestDown" /> -->
				<ToolbarSpacer/>

				<Button
					icon="sap-icon://add"
					tooltip="Add Sequence"
					press="onAddNewSequence" />
			</Toolbar>
			<SearchField liveChange="onSequenceSearch"
				width="100%"
				visible="{= ${localUIModel>/visibleTab} === 'SEQUENCES'}"/>
			<ScrollContainer
				visible="{= ${localUIModel>/visibleTab} === 'SEQUENCES'}"
				width="100%"
				horizontal="false"
				vertical="true"
				class="masterScrollContainer">
				<List
					id="idListSequences"
					items="{/SelectedProject/mAggregations/sequences}"
					mode="{device>/listMode}"
					select="onSequencesListSelect"
					class="masterList"
					>
					<items>
						<CustomListItem>
							<Toolbar width="100%">
								<Text text="{mProperties/name}"/>
								<ToolbarSpacer/>
								<Button press="onBtnDuplicateSequencePress"
												tooltip="Duplicate"
												icon="sap-icon://duplicate"
												type="Transparent"/>
								<Button press="onBtnDeleteSequencePress"
												tooltip="Delete"
												icon="sap-icon://delete"
												type="Transparent"/>

							</Toolbar>
						</CustomListItem>
					</items>
				</List>
			</ScrollContainer>

		</content>
	</Page>
</mvc:View>
