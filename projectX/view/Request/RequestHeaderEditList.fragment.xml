<c:FragmentDefinition
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:c="sap.ui.core"
	xmlns="sap.m">
	<Table items="{/request/mAggregations/requestHeaders}"
		  mode="MultiSelect"
		  id="idTableRequestHeaders"
		  rememberSelections="false"
			>
		<headerToolbar>
				<Toolbar>
						<Label text="Request Headers" />
					<ToolbarSpacer />
					<Button icon="sap-icon://add"
					  tooltip="Add header field"
					  press="onBtnAddRequestHeader"/>
			<Button icon="sap-icon://delete"
					  tooltip="Delete selected request header"
					  press="onBtnDeleteRequestHeaders"/>
				</Toolbar>
			</headerToolbar>
		<columns>
			<Column>
				<Text text="Field name" />
			</Column>
			<Column>
				<Text text="Value" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
				<Input
					  value="{mProperties/fieldName}"
					  type="Text"
			      placeholder="Field name ..."
      		  showSuggestion="true"
      	    suggestionItems="{/V_REQUEST_HEADER_FIELDS}"
					  suggestionItemSelected="handleRequestHeaderFieldNameChanged">
					<suggestionItems>
      			<c:Item text="{key}" key="{key}" />
    			</suggestionItems>
				</Input>
				<Input
					  value="{mProperties/fieldValue}"
					  type="Text"
			      placeholder="Value name ..."
      		  showSuggestion="true"
      	    suggestionItems="{/V_REQUEST_HEADER_VALUES}">
					<suggestionItems>
      			<c:Item text="{key}" key="{key}" />
    			</suggestionItems>
				</Input>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</c:FragmentDefinition>
