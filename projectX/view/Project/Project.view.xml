<mvc:View
	controllerName="projectX.view.Project.Project"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:c="sap.ui.core"
	xmlns="sap.m">
	<Page
		showHeader="false">
		<l:Grid
			defaultSpan="L12 M12 S12"
			width="auto">
			<l:content>
				<f:SimpleForm
					id="idAddProductForm"
					minWidth="800"
					maxContainerCols="2"
					editable="true"
					layout="ResponsiveGridLayout"
					labelSpanL="3"
					labelSpanM="3"
					emptySpanL="4"
					emptySpanM="4"
					columnsL="1"
					columnsM="1"
					class="editableForm">
					<f:content>
						<!-- Basic info -->
						<c:Title text="Project Info" />
						<Label text="Project Name" />
						<Input value="{localUIModel>/project/mProperties/name}"
							placeholder="name of project"
							liveChange="onNameChanged"
							valueLiveUpdate="true"
							/>
						<Label text="OData Service URL" />

							<Input value="{localUIModel>/project/mProperties/baseUrl}"
									/>
							<Button text="Check"
								 	tooltip="Check for valid OData service"
									press="onCheckODataService"
									/>
							<Text text="{localUIModel>/odataServiceCheckRes}"/>

					</f:content>
				</f:SimpleForm>
			</l:content>
		</l:Grid>

		<Table items="{/project/mAggregations/prefixUrls}"
				mode="MultiSelect"
				id="idTablUrls"
				rememberSelections="false"
				>
			<headerToolbar>
		    	<Toolbar>
		        	<Label text="Prefix URLs" />
		        <ToolbarSpacer />
		        <Button icon="sap-icon://add"
						tooltip="Add url"
						press="onBtnAddUrl"/>
				<Button icon="sap-icon://delete"
						tooltip="Delete selected url"
						press="onBtnDeleteUrl"/>
		      </Toolbar>
		    </headerToolbar>
			<columns>
				<Column>
					<Text text="URL" />
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Top">
					<cells>
						<Input value="{mProperties/url}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>

		<footer>
			<Toolbar>
				<ToolbarSpacer/>

			</Toolbar>
		</footer>
	</Page>
</mvc:View>
