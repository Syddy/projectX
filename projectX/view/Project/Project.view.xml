<mvc:View
	controllerName="projectX.view.Project.Project"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:c="sap.ui.core"
	xmlns="sap.m">
	<Page
		showHeader="false">
		<l:Grid
			defaultSpan="L12 M12 S12"
			width="auto">
			<l:content>
				<f:SimpleForm
					id="idAddProductForm"
					minWidth="800"
					maxContainerCols="2"
					editable="true"
					layout="ResponsiveGridLayout"
					labelSpanL="3"
					labelSpanM="3"
					emptySpanL="1"
					emptySpanM="1"
					columnsL="1"
					columnsM="1"
					class="editableForm">
					<f:content>
						<!-- Basic info -->
						<c:Title text="Project Info" />
						<Label text="Project Name" />
						<Input value="{localUIModel>/project/mProperties/name}"
							placeholder="name of project"
							liveChange="onNameChanged"
							valueLiveUpdate="true"
							/>
						<Label text="OData Service URL" />

							<Input value="{localUIModel>/project/mProperties/baseUrl}"
									/>
							<Button text="Check"
								 	tooltip="Check for valid OData service"
									press="onCheckODataService"
									/>
							<Text text="{localUIModel>/odataServiceCheckRes}"/>

							<Label text="Prefix URL" />
							<Input value="{localUIModel>/project/mProperties/prefixUrl}"
								placeholder="url to use as prefix for requests"
								/>
					</f:content>
				</f:SimpleForm>
			</l:content>
		</l:Grid>

		<footer>
			<Toolbar>
				<ToolbarSpacer/>

			</Toolbar>
		</footer>
	</Page>
</mvc:View>
