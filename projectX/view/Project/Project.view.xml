<mvc:View
	controllerName="projectX.view.Project.Project"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:c="sap.ui.core"
	xmlns="sap.m"
	height="100%">
	<Page
		showHeader="false"
		>
		<l:Grid
			defaultSpan="L12 M12 S12"
			width="auto">
			<l:content>
				<f:SimpleForm
					minWidth="800"
					maxContainerCols="2"
					editable="true"
					layout="ResponsiveGridLayout"
					labelSpanL="3"
					labelSpanM="3"
					emptySpanL="1"
					emptySpanM="1"
					columnsL="1"
					columnsM="1"
					>
					<f:content>
						<Label text="Project Name" />
						<Input value="{localUIModel>/project/mProperties/name}"
							placeholder="name of project"
							liveChange="onNameChanged"
							valueLiveUpdate="true"
							/>
						<Label text="OData Service URL" />

						<Input value="{localUIModel>/project/mProperties/baseUrl}"
								/>
						<Button text="Check"
							 	tooltip="Check for valid OData service"
								press="onCheckODataService"
								/>
						<Text text="{localUIModel>/odataServiceCheckRes}"/>

						<Label text="Prefix URL" />
						<Input value="{localUIModel>/project/mProperties/prefixUrl}"
							placeholder="url to use as prefix for requests"
							/>
						<Label text="" />
						<CheckBox text="use PROXY authentication for all request in project"
										selected="{localUIModel>/project/mProperties/useProxyAuthentication}"/>
						<Label text="PROXY Authentication" />
						<Input value="{localUIModel>/project/mProperties/proxyUsername}"
							placeholder="username"
							/>
						<Input value="{localUIModel>/project/mProperties/proxyPassword}"
							type="Password"
							placeholder="password"
							/>
						<Label text="" />
						<CheckBox text="use BASIC authentication for all request in project"
										selected="{localUIModel>/project/mProperties/useBasicAuthentication}"/>
						<Label text="BASIC Authentication" />
						<Input value="{localUIModel>/project/mProperties/username}"
							placeholder="username"
							/>
						<Input value="{localUIModel>/project/mProperties/password}"
							type="Password"
							placeholder="password"
							/>
					</f:content>
				</f:SimpleForm>
			</l:content>
		</l:Grid>
	</Page>
</mvc:View>
