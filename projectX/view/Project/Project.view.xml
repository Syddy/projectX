<mvc:View
	controllerName="projectX.view.Project.Project"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:c="sap.ui.core"
	xmlns="sap.m"
	height="100%">
	<Page
		showHeader="false"
		>
		<l:Grid
			defaultSpan="L12 M12 S12"
			width="auto">
			<l:content>
				<f:SimpleForm
					minWidth="800"
					maxContainerCols="2"
					editable="true"
					layout="ResponsiveGridLayout"
					labelSpanL="3"
					labelSpanM="3"
					emptySpanL="1"
					emptySpanM="1"
					columnsL="1"
					columnsM="1"
					>
					<f:content>
						<Label text="{i18n>ProjectDetailName}" />
						<Input value="{localUIModel>/project/mProperties/name}"
							placeholder="{i18n>ProjectDetailNamePlaceholder}"
							liveChange="onNameChanged"
							valueLiveUpdate="true"
							id="testingIDProjectName"
							/>

						<Label text="{i18n>ProjectDetailPrefixUrl}" />
						<Input value="{localUIModel>/project/mProperties/prefixUrl}"
							placeholder="{i18n>ProjectDetailPrefixUrlPlaceholder}"
							/>
						<Label text="{i18n>ProjectDetailCsrfUrl}" />
						<Input value="{localUIModel>/project/mProperties/csrfTokenUrl}"
							   placeholder="{i18n>ProjectDetailCsrfUrlPlaceholder}"
								/>
						<!-- Authentication -->
						<Label text="{i18n>ProjectDetailUseBasicAuthentication}" />
						<Switch state="{localUIModel>/project/mProperties/useBasicAuthentication}"
								tooltip="{i18n>ProjectDetailUseBasicAuthenticationTooltip}"/>
						<Label text="{i18n>ProjectDetailUsername}" />
						<Input value="{localUIModel>/project/mProperties/username}"
							placeholder="{i18n>ProjectDetailUsernamePlaceholder}"
							enabled="{localUIModel>/project/mProperties/useBasicAuthentication}"
							/>
						<Label text="{i18n>ProjectDetailPassword}" />
						<Input value="{localUIModel>/project/mProperties/password}"
							type="Password"
							placeholder="{i18n>ProjectDetailPasswordPlaceholder}"
							enabled="{localUIModel>/project/mProperties/useBasicAuthentication}"
							/>
							
							<Button text="{i18n>GitHub}" press="onShowGithub"/>
						<Label text="{i18n>GitHubURL}"/>
						<Input id="gitHubUrl" value="{localUIModel>/project/mProperties/githubUrl}"  placeholder="{i18n>GitHubURLPlaceHolder}" visible="false"/>
						<Label text="{i18n>GitHubUser}"/>
						<Input id="gitHubUser" value="{localUIModel>/project/mProperties/githubUser}" width="50%" placeholder="{i18n>GitHubUserPlaceHolder}" visible="false"/>
						<Label text="{i18n>GitHubPassword}"/>
						<Input id="gitHubPassword" value="{localUIModel>/project/mProperties/githubPassword}" type="Password" width="25%" placeholder="{i18n>GitHubPasswordPlaceHolder}" visible="false"/>
						<Label text="{i18n>GitHubRepository}"/>
						<Input id="gitHubRepositoryName" value="{localUIModel>/project/mProperties/githubRepository}" width="25%" placeholder="{i18n>GitHubRepositoryPlaceHolder}" visible="false"/>
						<Label text="{i18n>GitHubFileName}"/>
						<Input id="gitHubFileName" value="{localUIModel>/project/mProperties/githubFileName}" width="25%" placeholder="{i18n>GitHubFileNamePlaceHolder}" visible="false"/>
					</f:content>
				</f:SimpleForm>
			</l:content>
		</l:Grid>
	</Page>
</mvc:View>