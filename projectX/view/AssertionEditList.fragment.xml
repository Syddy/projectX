<c:FragmentDefinition
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:c="sap.ui.core"
	xmlns="sap.m">
	<Table items="{/assertions}"
			mode="MultiSelect"
			id="idTableAssertions"
			rememberSelections="false"
			>
		<headerToolbar>
	    	<Toolbar>
	        	<Label text="Assertions" />
	        <ToolbarSpacer />
	        <Button icon="sap-icon://add"
					tooltip="Add assertion"
					press="onBtnAddAssertion"/>
			<Button icon="sap-icon://delete"
					tooltip="Delete selected assertions"
					press="onBtnDeleteAssertions"/>
	      </Toolbar>
	    </headerToolbar>
		<columns>
			<Column>
				<Text text="Property" />
			</Column>
			<Column>
				<Text text="Operation" />
			</Column>
			<Column>
				<Text text="Expected Value" />
			</Column>
			<Column>
				<Text text="Success" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Select selectedKey="{mProperties/assertProperty}">
						<items>
							<!--These have to be a match of the assertProperties in Assertions.js-->
							<c:Item key="STATUS" text="STATUS" />
							<c:Item key="RESPONSEBODY" text="RESPONSEBODY" />
						</items>
					</Select>
					<Select selectedKey="{mProperties/operation}">
						<items>
							<!--These have to be a match of the assertOperations in Assertions.js-->
							<c:Item key="EQUALS" text="EQUALS" />
							<c:Item key="EQUALSNOT" text="EQUALSNOT" />
						</items>
					</Select>
					<Input value="{mProperties/expected}"/>
					<c:Icon
						src="{ parts : [
							{ path : 'mProperties/result' },
							{ path : 'mProperties/resultReady' }
						],
						formatter : 'projectX.util.Formatter.assertionsResultToImage' }"/>
					
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</c:FragmentDefinition>