<c:FragmentDefinition
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:c="sap.ui.core"
	xmlns="sap.m">
	<Table items="{/assertions}"
			mode="MultiSelect"
			id="idTableAssertions"
			rememberSelections="false"
			>
		<headerToolbar>
	    	<Toolbar>
	        	<Label text="Assertions" />
	        <ToolbarSpacer />
	        <Button icon="sap-icon://add"
					tooltip="Add assertion"
					press="onBtnAddAssertion"/>
			<Button icon="sap-icon://delete"
					tooltip="Delete selected assertions"
					press="onBtnDeleteAssertions"/>
	      </Toolbar>
	    </headerToolbar>
		<columns>
			<Column>
				<Text text="Property" />
			</Column>
			<Column>
				<Text text="JSON/XML Path" />
			</Column>
			<Column>
				<Text text="Operation" />
			</Column>
			<Column>
				<Text text="Expected Value" />
			</Column>
			<Column width="2em">
				<Text text="Success" />
			</Column>
			<Column>
				<Text text="Evaluated Value" />
			</Column>
			<Column width="2em">
				<Text text="Var" />
			</Column>
		</columns>
		<items>
			<ColumnListItem vAlign="Top">
				<cells>
					<Select selectedKey="{mProperties/assertProperty}"
							items="{/ASSERTPROPERTIES}">
							<c:Item text="{key}" key="{key}"/>
					</Select>
					<Input value="{mProperties/path}"/>
					<Select selectedKey="{mProperties/operation}"
							items="{/ASSERTOPERATIONS}">
							<c:Item text="{key}" key="{key}"/>
					</Select>
					<Input value="{mProperties/expected}"/>
					<c:Icon
						src="{ parts : [
							{ path : 'mProperties/result' },
							{ path : 'mProperties/resultReady' }
						],
						formatter : 'projectX.util.Formatter.assertionsResultToImage' }"/>
					<Text text="{mProperties/evaluatedValue}"/>
					<Input value="{mProperties/name}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</c:FragmentDefinition>