<mvc:View
	controllerName="projectX.view.Detail"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page
		showNavButton="{device>/isPhone}"
		navButtonPress="onNavBack"
		title="{i18n>detailTitle}">
		<content>

			<FlexBox
				width="100%"
				alignItems="Start">
				<items>

					<Select selectedKey="{/httpMethod}">
						<items>
							<core:Item text="GET"     key="GET"/>
							<core:Item text="POST"    key="POST"/>
							<core:Item text="PUT"     key="PUT"/>
							<core:Item text="DELETE"  key="DELETE"/>
							<core:Item text="HEAD"    key="HEAD"/>
							<core:Item text="OPTIONS" key="OPTIONS"/>
							<core:Item text="PATCH"   key="PATCH"/>
						</items>
					</Select>
					<Input
						value="{/url}"
						type="Url"
						maxLength="4096"
						placeholder="Enter valid Service-URL ..." />
					<Button press="onBtnSendPress" text="Sender"/>

				</items>
			</FlexBox>


				<VBox>
					<Label text="Request Header" />
					<TextArea height="200px" width="100%"
							enabled="true"
							editable="true"
							value="{/Request/requestHeader}" />
				</VBox>
				<VBox>
					<Label text="Request Body" />
					<TextArea height="200px" width="100%"
							enabled="true"
							editable="true"
							value="{/Request/requestBody}" />
				</VBox>


				<VBox>
					<Label text="Response Header" />
					<TextArea height="200px" width="100%"
							enabled="true"
							editable="false"
							value="{/Request/responseHeader}" />
				</VBox>
				<VBox>
					<Label text="Response Body" />
					<TextArea height="200px" width="100%"
							enabled="true"
							editable="false"
							value="{/Request/responseBody}" />
				</VBox>



	</content>
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>

	</Page>
</mvc:View>
