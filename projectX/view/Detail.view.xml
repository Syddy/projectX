<mvc:View
	controllerName="projectX.view.Detail"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page
		showNavButton="{device>/isPhone}"
		navButtonPress="onNavBack"
		title="{localUIModel>/name}">
		<content>
			<HBox>
				<Input value="{localUIModel>/name}"/>
				<Button press="onBtnSavePress" text="Save" icon="sap-icon://save"/>
				<Button press="onBtnDuplicatePress" text="Duplicate" icon="sap-icon://duplicate"/>
				<Button press="onBtnDeletePress" text="Delete" icon="sap-icon://delete"/>
			</HBox>
			<FlexBox
				width="100%"
				alignItems="Start">
					<Select selectedKey="{localUIModel>/httpMethod}">
						<items>
							<core:Item text="GET"     key="GET"/>
							<core:Item text="POST"    key="POST"/>
							<core:Item text="PUT"     key="PUT"/>
							<core:Item text="DELETE"  key="DELETE"/>
							<core:Item text="HEAD"    key="HEAD"/>
							<core:Item text="OPTIONS" key="OPTIONS"/>
							<core:Item text="PATCH"   key="PATCH"/>
						</items>
					</Select>
					<Input
						value="{localUIModel>/url}"
						type="Url"
						maxLength="4096"
						placeholder="Enter valid Service-URL ..." >
						<layoutData>
                <FlexItemData growFactor="1" />
              </layoutData>
					</Input>
					<Button press="onBtnSendPress" text="Send"/>
			</FlexBox>


				<!-- <VBox> -->
				<Label text="Request Header" />
				<FlexBox
					alignItems="Start">

					<!-- TODO bind values to localUIModel>/Request/Header/[0 .. x] -->
					<Input value="Accept-Encoding" >
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Input>
					<!-- TODO insert line break -->
					<Input value="UTF-8" />
					<Input value="Content-Type" >
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Input>
					<Input value="application/json" />
					<!-- <TextArea height="200px" width="100%"
							enabled="true"
							editable="true"
							value="{localUIModel>/Request/Header}" /> -->
				<!-- </VBox> -->
				</FlexBox>
				<VBox>
					<Label text="Request Body" />
					<TextArea height="200px" width="100%"
							enabled="true"
							editable="true"
							value="{localUIModel>/Request/Body}" />
				</VBox>


				<VBox>
					<Label text="Response Header" />
					<TextArea height="200px" width="100%"
							enabled="true"
							editable="false"
							value="{localUIModel>/Response/Header}" />
				</VBox>
				<VBox>
					<Label text="Response Body" />
					<TextArea height="200px" width="100%"
							enabled="true"
							editable="false"
							value="{localUIModel>/Response/Body}" />
				</VBox>



	</content>
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>

	</Page>
</mvc:View>
