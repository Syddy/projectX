<mvc:View
	controllerName="projectX.view.Detail"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	<Page
		showNavButton="{device>/isPhone}"
		navButtonPress="onNavBack"
		enableScrolling="false"
		showHeader="false"
		title="{localUIModel>/name}">
		<subHeader>
	      <Toolbar>
	        <SegmentedButton selectedButton="idButtonRequest"
							select="onSegmentedButtonSelect">
	          <Button text="Request" id="idButtonRequest" />
	          <Button text="Assertions" id="idButtonAssertions" />
	          <Button text="Metadata" id="idButtonMetadata" />
	        </SegmentedButton>
	        <ToolbarSpacer/>
			<Button text="Send Request" press="onBtnSendPress"/>
	      </Toolbar>
    	</subHeader>
		
		<content>
				
			<ScrollContainer
				visible="{localUIModel>/requestVisible}"
				height="100%"
				width="100%"
				horizontal="false"
				vertical="true" >
				<VBox>
					<HBox>
						<Input value="{localUIModel>/name}"/>
					</HBox>
					<FlexBox
							width="100%"
							alignItems="Start">
							<Select selectedKey="{localUIModel>/httpMethod}"
									items="{/HTTP_METHODS}">
									<core:Item text="{key}" key="{key}"/>
							</Select>
							<Input
								value="{localUIModel>/url}"
								type="Url"
								maxLength="4096"
								placeholder="Enter valid Service-URL ..." >
								<layoutData>
		                <FlexItemData growFactor="1" />
		              </layoutData>
							</Input>
							<Button press="onBtnSendPress" text="Send"/>
					</FlexBox>

					<VBox id="idVBoxRequestHeaderPlaceholder" />


						<VBox>
							<Label text="Response Header" />
							<Text height="200px" width="100%"
									enabled="true"
									editable="false"
									text="{localUIModel>/Response/Header}" />
						</VBox>
						<VBox>
							<Label text="Response Body" />
							<Text height="200px" width="100%"
									enabled="true"
									editable="false"
									text="{localUIModel>/Response/Body}" />
						</VBox>	
				</VBox>
			</ScrollContainer>

			<ScrollContainer
				visible="{localUIModel>/assertionsVisible}"
				height="100%"
				width="100%"
				horizontal="false"
				vertical="true" >
				<VBox id="idVBoxAssertionPlaceholder"/>
			</ScrollContainer>
			<ScrollContainer
				visible="{localUIModel>/metadataVisible}"
				height="100%"
				width="100%"
				horizontal="true"
				vertical="true" >
				<VBox id="idVBoxMetadataTypesPlaceholder"/>
			</ScrollContainer>
				
		</content>
			<footer>
				<Toolbar>
				<ToolbarSpacer/>
				<Button press="onBtnSavePress" type="Emphasized" text="Save" icon="sap-icon://save"/>
				<Button press="onBtnDuplicatePress" text="Duplicate" icon="sap-icon://duplicate"/>
				<Button press="onBtnDeletePress" text="Delete" icon="sap-icon://delete"/>
			</Toolbar>
		</footer>

	</Page>
</mvc:View>
