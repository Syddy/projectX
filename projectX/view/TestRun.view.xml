<mvc:View
	controllerName="projectX.view.TestRun"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:c="sap.ui.core"
	xmlns="sap.m">
	<Page
		title="{localUIModel>/project/mProperties/name}">
		<Label text="{localUIModel>/project/mAggregations/requests}"/>
		
		<Table 
			    items="{/SelectedProject/mAggregations/requests}">
			    <columns>
			      <Column
			        >
			        <Text text="Request" />
			      </Column>
					<Column
					width="5em">
					<Text text="Assertions" />
					</Column>
			      <Column
			        hAlign="Right"
					width="3em">
			        <Text text="Status" />
			      </Column>
					<Column
					width="1em">
						<Text text="Time" />
					</Column>
			    </columns>
			    <items>
			      <ColumnListItem>
			        <cells>
						<VBox>
						<ObjectIdentifier
					    	title="{mProperties/name}"
					    	text="{mProperties/url}"
							titleActive="true" 
							titlePress="onRequestNamePress"/>
						</VBox>
			        	<c:Icon
							src="{ parts : [
                                { path : 'mProperties/assertionsResult' },
                                { path : 'mProperties/assertionsResultReady' }
                            ],
                            formatter : 'projectX.util.Formatter.assertionsResultToImage' }"/>
			        	<Text text="{mProperties/status}"/>
						<Text text="{mProperties/responseTime}"/>
			        </cells>
			      </ColumnListItem>
			    </items>
			  </Table>
		
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Clear"  
						press="onClearResults"
						/>
				<Button text="Run Sequence" 
						type="Emphasized" 
						press="onRunSequence"
						visible="{localUIModel>/testNotRunning}"
						/>
				<Button text="Run Parallel" 
						type="Emphasized" 
						press="onRun"
						visible="{localUIModel>/testNotRunning}"
						/>
				<Button text="Stop" 
						type="Emphasized" 
						press="onStopSequence"
						visible="{localUIModel>/testRunning}"
						/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
